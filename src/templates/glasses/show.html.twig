{% extends 'base.html.twig' %}

{% block title %}Glasses{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex">
            <span class="navbar-brand mb-0 mx-2 h1">My Glasses</span>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home_index') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_glasses_store_index') }}">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about_index') }}">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_message_new') }}">Contact Us</a>
                </ul>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="nav-item">
                                <a class="nav-link"><span>Welcome!</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Register</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('app_login') }}"><span
                                            class="glyphicon glyphicon-log-in"></span> Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="m-5">
        <div class="input-group m-5">
            <form class="form-inline" method="get" action="{{ path('app_glasses_search') }}">
                <input class="form-control mr-sm-2" name="query" type="text" placeholder="Search..."
                       aria-label="Search">
                <input class="btn btn-outline-success my-2 my-sm-0" value="Search" type="submit">
            </form>
        </div>
        {#        <div>#}
        {#            <a href="{{ path('app_home_index', ['_locate' : 'en']) }}">en</a>#}
        {#            <a href="{{ path('app_home_index', ['_locate' : 'fa']) }}">fa</a>#}
        {#        </div>#}
    </div>

    <h1>Glasses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ glass.id }}</td>
            </tr>
            <tr>
                <th>FrameMaterial</th>
                <td>{{ glass.frameMaterial }}</td>
            </tr>
            <tr>
                <th>FrameForm</th>
                <td>{{ glass.frameForm }}</td>
            </tr>
            <tr>
                <th>FrameColor</th>
                <td>{{ glass.frameColor }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ glass.brand }}</td>
            </tr>
            <tr>
                <th>LenzMaterial</th>
                <td>{{ glass.lenzMaterial }}</td>
            </tr>
            <tr>
                <th>FaceForm</th>
                <td>{{ glass.faceForm }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ glass.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ glass.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_glasses_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_glasses_edit', {'id': glass.id}) }}">edit</a>

    {{ include('glasses/_delete_form.html.twig') }}

    <footer class="text-center text-lg-start bg-light text-muted">

        <section class="border-bottom">
        </section>

        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
