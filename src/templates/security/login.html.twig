{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex">
            <span class="navbar-brand mb-0 mx-2 h1">My Glasses</span>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home_index') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_glasses_store_index') }}">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_about_index') }}">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_message_new') }}">Contact Us</a>
                </ul>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="nav-item">
                                <a class="nav-link"><span>Welcome!</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}"><span
                                            class="glyphicon glyphicon-user"></span>
                                    Register</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link active" href="{{ path('app_login') }}"><span
                                            class="glyphicon glyphicon-log-in"></span> Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="m-5">
        <div class="input-group m-5">
            <form class="form-inline" method="get" action="{{ path('app_glasses_search') }}">
                <input class="form-control mr-sm-2" name="query" type="text" placeholder="Search By Brand or Model"
                       aria-label="Search">
                <input class="btn btn-outline-success my-2 my-sm-0" value="Search" type="submit">
            </form>
        </div>
        <div>
            <a href="{{ path('app_home_index', {'_locale': 'en'}) }}" >en</a>
            <a href="{{ path('app_home_index', {'_locale': 'fa'}) }}" >fa</a>
        </div>
    </div>

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{{ 'forms.login.title'|trans }}</h1>
    <label for="username">{{ 'forms.login.email'|trans }}</label>
    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
           autocomplete="email" required autofocus>
    <label for="password">{{ 'forms.login.password'|trans }}</label>
    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
           required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        {{ 'forms.login.signin'|trans }}
    </button>
</form>

    <footer class="text-center text-lg-start bg-light text-muted">

        <section class="border-bottom">
        </section>

        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            Â© 2022 Copyright My Glasses
        </div>
    </footer>
{% endblock %}
